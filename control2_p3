palabras = []

print("Ingrese las palabras que quiera. (Presione Enter para finalizar).")

while True:
    p = input("Palabra: ")
    if not p:
        break
    palabras.append(p)

if palabras:
    print("La palabra m√°s corta tiene", len(min(palabras,)), "caracteres.")
else:
    print("No se ingresaron palabras.")